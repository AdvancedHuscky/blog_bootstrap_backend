<%- include header %>
<div style="text-align: center">
    <% posts.forEach((post)=>{
        //console.log(post);
    %>
    <p>
        <span><a class="edit" href="/edit/<%=post._id%>">编辑</a></span>
        <span><a class="edit" href="/delete?id=<%= post._id%>">删除</a></span>
    </p>
    <p><h2><a href="#"><%= post.title %></a></h2></p>
    <p class="info">
        作者：<a href="#"><%= post.author %></a> |
        日期：<%= post.publishTime %> |
        浏览：<%= post.pv%>
    </p>
    <%if(post.postImg) { %>
    <img src="/images/pic/<%= post.postImg%>" alt="" style="width:60%;text-align: center">
    <% } %>
    <p style="margin: 8em;text-align: left"><%- post.article %></p>

    <%})%>
</div>

<%- include footer %>